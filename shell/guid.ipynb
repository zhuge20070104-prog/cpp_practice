    "import uuid\n",
    "\n",
    "def short_guid():\n",
    "    # 生成一个 UUID\n",
    "    guid = uuid.uuid4()\n",
    "    # 将 UUID 转换为字符串，并去掉横杠\n",
    "    guid_str = str(guid).replace('-', '')\n",
    "    # 返回前 8 位作为短 GUID\n",
    "    return guid_str[:8]\n",
    "\n",
    "short_guid()"
   ]
  }
